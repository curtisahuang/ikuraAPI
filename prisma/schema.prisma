// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// Testing if this shows up on FISH
model Fish {
  id                   String                 @id @default(cuid())
  jpName               String
  enName               String
  notes                String?                /// TESTING IF THIS SHOWS UP ON NOTES
  cooked               Boolean                @default(false)
  fish_characteristics Fish_Characteristics[]
}

model Fish_Characteristics {
  char_id String  @id @default(uuid())
  fish_id String
  color1  String
  color2  String?
  texture String?
  family  String?
  genus   String?
  fish    Fish?   @relation(fields: [fish_id], references: [id])
}
